<%= form_with model: model, local: true do |f| %>
  <%= f.label :title, "Title" %>
  <%= f.text_field :title %>
  <%= f.label :body, "Body" %>
  <%= f.text_area :body %>
  <% if current_page?(books_path) %>
    <%= f.submit "Create Book" %>
  <% else %>
    <%= f.submit "Update Book" %>
  <% end %>
<% end %>